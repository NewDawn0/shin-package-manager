#!/bin/bash
##### sources #####
source $HOME/.ndos/shin/shin.config
source $HOME/.ndos/shin/shinVersion.config

##### updater #####
# updates all packages
update () {
    echo -ne "\033[0;36m=> \033[0mUpadting 0/11\r"
    if cat $HOME/.ndos/shin/managers.txt | awk -F "|" '{print $1}' | grep brew > /dev/null 2>&1; then sudo -u $user brew update > /dev/null 2>&1; fi
    echo -ne "\033[0;36m=> \033[0mUpadting 1/11\033[0m\r"
    if cat $HOME/.ndos/shin/managers.txt | awk -F "|" '{print $1}' | grep brew > /dev/null 2>&1; then sudo -u $user brew upgrade > /dev/null 2>&1; fi
    echo -ne "\033[0;36m=> \033[0mUpadting 2/11\033[0m\r"
    if cat $HOME/.ndos/shin/managers.txt | awk -F "|" '{print $1}' | grep indiepkg > /dev/null 2>&1; then sudo -u $user indiepkg update > /dev/null 2>&1; fi
    echo -ne "\033[0;36m=>\033[0m Upadting 3/11\033[0m\r"
    if cat $HOME/.ndos/shin/managers.txt | awk -F "|" '{print $1}' | grep npm > /dev/null 2>&1; then sudo -u $user npm install -g npm > /dev/null 2>&1; fi
    echo -ne "\033[0;36m=> \033[0mUpadting 4/11\r"
    if cat $HOME/.ndos/shin/managers.txt | awk -F "|" '{print $1}' | grep npm > /dev/null 2>&1; then sudo -u $user npm update -g > /dev/null 2>&1; fi
    echo -ne "\033[0;36m=>\033[0m Upadting 5/11\r"
    if cat $HOME/.ndos/shin/managers.txt | awk -F "|" '{print $1}' | grep port > /dev/null 2>&1; then sudo port selfupdate > /dev/null 2>&1; fi
    echo -ne "\033[0;36m=> \033[0mUpadting 6/11\r"
    if cat $HOME/.ndos/shin/managers.txt | awk -F "|" '{print $1}' | grep pip > /dev/null 2>&1; then sudo port upgrade outdated > /dev/null 2>&1; fi
    echo -ne "\033[0;36m=> \033[0mUpadting 7/11\r"
    if cat $HOME/.ndos/shin/managers.txt | awk -F "|" '{print $1}' | grep pip > /dev/null 2>&1; then sudo -u $user python -m pip install -â€“upgrade pip > /dev/null 2>&1; fi
    echo -ne "\033[0;36m=> \033[0mUpadting 8/11\r"
    if cat $HOME/.ndos/shin/managers.txt | awk -F "|" '{print $1}' | grep apt > /dev/null 2>&1; then sudo apt update && sudo apt upgrade -y > /dev/null 2>&1; fi
    echo -ne "\033[0;36m=> \033[0mUpadting 9/11\r"
    if cat $HOME/.ndos/shin/managers.txt | awk -F "|" '{print $1}' | grep pacman > /dev/null 2>&1; then sudo -u $user sudo pacman -Syu > /dev/null 2>&1; fi
    echo -ne "\033[0;36m=> \033[0mUpadting 10/11\r"
    if cat $HOME/.ndos/shin/managers.txt | awk -F "|" '{print $1}' | grep yay > /dev/null 2>&1; then sudo -u $user sudo yay -Syu > /dev/null 2>&1; fi
    echo -ne "\033[0;36m=> \033[0mUpadting 11/11\r"
    echo -e "\033[0;32m=> \033[0mUpdated all packages\r"
    echo ""
}

# Fully updates shin packge manager and all packages
shin-update () {
    wget https://raw.githubusercontent.com/NewDawn0/shin/main/shin > /dev/null 2>&1
    wget https://raw.githubusercontent.com/NewDawn0/shin/main/configs/shinVersion.config > /dev/null 2>&1
    mv shin.1 shin && chmod +x shin
    mv shinVersion.config $HOME/.ndos/shin/shinVersion.config
    source $HOME/.ndos/shin/shinVersion.config
    echo ""
    echo -e "\033[0;36mSuccessfully updated to       \033[0m"
    echo -e "\033[0;36m$(figlet "Shin v$version")       \033[0m"
    echo ""
    update
}

##### install #####
# install all packages
install () {
    # loop through packages
    for pkg in "$@"; do
        if cat  $HOME/.ndos/shin/packages.txt | awk -F "|" '{print $1}' | grep $pkg > /dev/null 2>&1; then
            echo -e "\033[0;36m=>\033[0m $pkg is already installed"
        else
            # check if the command is succeful otherwise check with the next package manager
            if sudo -u $user indiepkg install -y $pkg > /dev/null 2>&1; then
                echo -e "\033[0;32m=>\033[0m Installed $pkg"
                sudo echo "$pkg|indiepkg" >> $HOME/.ndos/shin/packages.txt
            else
                if yes | sudo pacman -S "$pkg" > /dev/null 2>&1; then
                    echo -e "\033[0;32m=>\033[0m Installed $pkg"
                    sudo echo "$pkg|pacman" >> $HOME/.ndos/shin/packages.txt
                else
                    if sudo -u $user brew install "$pkg" > /dev/null 2>&1; then
                        echo -e "\033[0;32m=>\033[0m Installed $pkg"
                        sudo echo "$pkg|brew" >> $HOME/.ndos/shin/packages.txt
                    else
                        if yes | sudo yay -S "$pkg" > /dev/null 2>&1; then
                            echo -e "\033[0;32m=>\033[0m Installed $pkg"
                            sudo echo "$pkg|yay" >> $HOME/.ndos/shin/packages.txt
                        else
                            if sudo port install "$pkg" > /dev/null 2>&1; then
                                echo -e "\033[0;32m=>\033[0m Installed $pkg"
                                sudo echo "$pkg|port" >> $HOME/.ndos/shin/packages.txt
                            else
                                if sudo -u $user cargo install "$pkg" > /dev/null 2>&1; then
                                    echo -e "\033[0;32m=>\033[0m Installed $pkg"
                                    sudo echo "$pkg|cargo" >> $HOME/.ndos/shin/packages.txt
                                else
                                    if sudo -u $user python -m pip install "$pkg" > /dev/null 2>&1; then
                                        echo -e "\033[0;32m=>\033[0m Installed $pkg"
                                        sudo echo "$pkg|pip" >> $HOME/.ndos/shin/packages.txt
                                    else
                                        if sudo -u $user npm install -g "$pkg" > /dev/null 2>&1; then
                                            echo -e "\033[0;32m=>\033[0m Installed $pkg"
                                            sudo echo "$pkg|npm" >> $HOME/.ndos/shin/packages.txt
                                        else
                                            echo -e "\033[0;36m=>\033[0m No package was found named $pkg"
                                        fi
                                    fi
                                fi
                            fi
                        fi
                    fi
                fi
            fi
        fi
    done
}
# install packages with specified package manager
packagemanager-install () {
    # list package manager
    manager=$1
    # remove package manager from arguments
    all=${@:2}
    # loop through packages
    for pkg in $all; do
        #check if package is already installed
        if cat  $HOME/.ndos/shin/packages.txt | awk -F "|" '{print $1}' | grep $pkg > /dev/null 2>&1; then
            echo -e "\033[0;36m=>\033[0m $pkg is already installed"
        else
            case $manager in
                brew)       if cat $HOME/.ndos/shin/managers.txt | awk -F "|" '{print $1}' | grep $manager > /dev/null 2>&1; then if sudo -u $user brew install $pkg > /dev/null 2>&1; then sudo echo "$pkg|brew" >> $HOME/.ndos/shin/packages.txt && echo -e "\033[0;32m=>\033[0m Installed $pkg"; else echo -e "\033[0;36m=>\033[0m Package $pkg not found"; fi; else echo -e "\033[0;36m=> \033[0mPackage manager $manager is not installed" && echo -e "\033[0;36m=> \033[0mRun 'sudo shin -lpm' to view all installed package managers"; fi ;;
                indiepkg)   if cat $HOME/.ndos/shin/managers.txt | awk -F "|" '{print $1}' | grep $manager > /dev/null 2>&1; then if sudo -u $user indiepkg install -y $pkg > /dev/null 2>&1; then sudo echo "$pkg|indiepkg" >> $HOME/.ndos/shin/packages.txt && echo -e "\033[0;32m=>\033[0m Installed $pkg"; else echo -e "\033[0;36m=>\033[0m Package $pkg not found"; fi; else echo -e "\033[0;36m=> \033[0mPackage manager $manager is not installed" && echo -e "\033[0;36m=> \033[0mRun 'sudo shin -lpm' to view all installed package managers"; fi ;;
                port)       if cat $HOME/.ndos/shin/managers.txt | awk -F "|" '{print $1}' | grep $manager > /dev/null 2>&1; then if sudo port install $pkg > /dev/null 2>&1; then sudo echo "$pkg|port" >> $HOME/.ndos/shin/packages.txt && echo -e "\033[0;32m=>\033[0m Installed $pkg"; else echo -e "\033[0;36m=>\033[0m Package $pkg not found"; fi; else echo -e "\033[0;36m=> \033[0mPackage manager $manager is not installed" && echo -e "\033[0;36m=> \033[0mRun 'sudo shin -lpm' to view all installed package managers"; fi ;;
                cargo)      if cat $HOME/.ndos/shin/managers.txt | awk -F "|" '{print $1}' | grep $manager > /dev/null 2>&1; then if sudo -u $user cargo install $pkg > /dev/null 2>&1; then sudo echo "$pkg|cargo" >> $HOME/.ndos/shin/packages.txt && echo -e "\033[0;32m=>\033[0m Installed $pkg"; else echo -e "\033[0;36m=>\033[0m Package $pkg not found"; fi; else echo -e "\033[0;36m=> \033[0mPackage manager $manager is not installed" && echo -e "\033[0;36m=> \033[0mRun 'sudo shin -lpm' to view all installed package managers"; fi ;;
                npm)        if cat $HOME/.ndos/shin/managers.txt | awk -F "|" '{print $1}' | grep $manager > /dev/null 2>&1; then if sudo -u $user npm install -g $pkg > /dev/null 2>&1; then sudo echo "$pkg|npm" >> $HOME/.ndos/shin/packages.txt && echo -e "\033[0;32m=>\033[0m Installed $pkg"; else echo -e "\033[0;36m=>\033[0m Package $pkg not found"; fi; else echo -e "\033[0;36m=> \033[0mPackage manager $manager is not installed" && echo -e "\033[0;36m=> \033[0mRun 'sudo shin -lpm' to view all installed package managers"; fi ;;
                pip)        if cat $HOME/.ndos/shin/managers.txt | awk -F "|" '{print $1}' | grep $manager > /dev/null 2>&1; then if sudo -u $user python -m pip install $pkg > /dev/null 2>&1; then sudo echo "$pkg|pip" >> $HOME/.ndos/shin/packages.txt && echo -e "\033[0;32m=>\033[0m Installed $pkg"; else echo -e "\033[0;36m=>\033[0m Package $pkg not found"; fi; else echo -e "\033[0;36m=> \033[0mPackage manager $manager is not installed" && echo -e "\033[0;36m=> \033[0mRun 'sudo shin -lpm' to view all installed package managers"; fi ;;
                yay)        if cat $HOME/.ndos/shin/managers.txt | awk -F "|" '{print $1}' | grep $manager > /dev/null 2>&1; then if yes | sudo yay -S $pkg > /dev/null 2>&1; then sudo echo "$pkg|yay" >> $HOME/.ndos/shin/packages.txt && echo -e "\033[0;32m=>\033[0m Installed $pkg"; else echo -e "\033[0;36m=>\033[0m Package $pkg not found"; fi; else echo -e "\033[0;36m=> \033[0mPackage manager $manager is not installed" && echo -e "\033[0;36m=> \033[0mRun 'sudo shin -lpm' to view all installed package managers"; fi ;;
                pacman)     if cat $HOME/.ndos/shin/managers.txt | awk -F "|" '{print $1}' | grep $manager > /dev/null 2>&1; then if yes | sudo pacman -S $pkg > /dev/null 2>&1; then sudo echo "$pkg|pacman" >> $HOME/.ndos/shin/packages.txt && echo -e "\033[0;32m=>\033[0m Installed $pkg"; else echo -e "\033[0;36m=>\033[0m Package $pkg not found"; fi; else echo -e "\033[0;36m=> \033[0mPackage manager $manager is not installed" && echo -e "\033[0;36m=> \033[0mRun 'sudo shin -lpm' to view all installed package managers"; fi ;;
                apt)        if cat $HOME/.ndos/shin/managers.txt | awk -F "|" '{print $1}' | grep $manager > /dev/null 2>&1; then if yes | sudo pacman -S $pkg > /dev/null 2>&1; then sudo echo "$pkg|apt" >> $HOME/.ndos/shin/packages.txt && echo -e "\033[0;32m=>\033[0m Installed $pkg"; else echo -e "\033[0;36m=>\033[0m Package $pkg not found"; fi; else echo -e "\033[0;36m=> \033[0mPackage manager $manager is not installed" && echo -e "\033[0;36m=> \033[0mRun 'sudo shin -lpm' to view all installed package managers"; fi ;;
                *)          echo -e "\033[0;36m=> \033[0mPackage manager $manager not found" && echo -e "\033[0;36m=> \033[0mRun 'sudo shin -lpm' to view all installed package managers" ;;
            esac
        fi
    done
}

##### List #####
# list installed packages
listInsalled () {
    cat  $HOME/.ndos/shin/packages.txt | awk -F "|" '{print $1}'
}
listManagers () {
    cat  $HOME/.ndos/shin/managers.txt
}

##### remove #####
# remove packages
remove () {
    # uninstall package from list
    uninstallFromlist() {
        pkg=$1
        buffer=$(cat  $HOME/.ndos/shin/packages.txt | grep -v $pkg)
        cat /dev/null > $HOME/.ndos/shin/packages.txt
        for line in $buffer; do
            echo $line >> $HOME/.ndos/shin/packages.txt
        done
    }
    # uninstall package from system
    uninstallPackage () {
        pkg=$1
        manager=$(cat  $HOME/.ndos/shin/packages.txt | grep $pkg | awk -F "|" '{print $2}')
        case $manager in
            brew)       sudo -u $user brew uninstall $pkg > /dev/null 2>&1 && echo -e "\033[0;32m=>\033[0m Unistalled $pkg" ;;
            indiepkg)   sudo -u $user indiepkg uninstall -y $pkg > /dev/null 2>&1 && echo -e "\033[0;32m=>\033[0m Uninstalled $pkg" ;;
            port)       sudo port uninstall $pkg > /dev/null 2>&1 && echo -e "\033[0;32m=>\033[0m Uninstalled $pkg" ;;
            cargo)      sudo -u $user cargo uninstall $pkg > /dev/null 2>&1 && echo -e "\033[0;32m=>\033[0m Uninstalled $pkg" ;;
            npm)        sudo -u $user npm uninstall -g $pkg > /dev/null 2>&1 && echo -e "\033[0;32m=>\033[0m Uninstalled $pkg" ;;
            pip)        yes | sudo -u $user python -m pip uninstall $pkg > /dev/null 2>&1 && echo -e "\033[0;32m=>\033[0m Uninstalled $pkg" ;;
            yay)        yes | sudo yay -Rns $pkg > /dev/null 2>&1 && echo -e "\033[0;32m=>\033[0m Uninstalled $pkg" ;;
            pacman)     yes | sudo pacman -Rns $pkg > /dev/null 2>&1 && echo -e "\033[0;32m=>\033[0m Uninstalled $pkg" ;;
            *)          echo -e "\033[0;36m=>\033[0m No package named $pkg is installed" ;;
        esac
    }
    # loop through packages
    for pkg in $@; do
        uninstallPackage $pkg
        uninstallFromlist $pkg
    done
}
shin-test () {
    manager=$1
    echo $manager
    if cat  $HOME/.ndos/shin/managers.txt | awk -F "|" '{print $1}' | grep $manager > /dev/null 2>&1; then echo "test"; else echo "Package manager $manager is not installed" && echo "Run 'sudo shin -lpm' to view all installed package managers"; fi
}
##### main #####
# check for root privileges
id=$(id -u)
if [ $id -eq 0 ]; then
    # check flags
    case $1 in
        shin-update)            shin-update ;;
        -us)                    shin-update ;;
        -su)                    shin-update ;;
        test)                   shin-test $2 ;;
        update)                 update ;;
        -u)                     update ;;
        -l)                     listInsalled ;;
        list)                   listInsalled ;;
        list-packages)          listInsalled ;;
        list-managers)          listManagers ;;
        list-package-managers)  listManagers ;;
        -lm)                    listManagers ;;
        -lpm)                   listManagers ;;
        -rm)                    remove "${@:2}" ;;
        remove)                 remove "${@:2}" ;;
        uninstall)              remove "${@:2}" ;;
        -r)                     remove "${@:2}" ;;
        install)                install "${@:2}" ;;
        -i)                     install "${@:2}" ;;
        pkgman-install)         packagemanager-install ${@:2} ;;
        -pi)                    packagemanager-install ${@:2} ;;
        -ip)                    packagemanager-install ${@:2} ;;
        *) echo "Error: Invalid argument"
    esac
else
    echo "Shin requires root privileges"
fi